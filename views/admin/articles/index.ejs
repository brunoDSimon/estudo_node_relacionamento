<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<div class="container bg-light">
    <div class="col">
        <h3>Artigos</h3>
        <a class="btn btn-outline-primary mb-2" href="/admin/aticles/new" > Criar artigo</a>
        <table class="table table-light">
            <thead class="thead-light">
                <tr>
                    <th>id</th>
                    <th>titulo</th>
                    <th>slug</th>
                    <th>categoria</th>
                    <th>Ações</th>

                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => {%>
                    <tr>
                            <td><%= article.id %></td>
                            <td><%= article.title %></td>
                            <td><%= article.slug %></td>
                            <td><%= article.category.title %></td>
                            <td>
                                <div class="row">
                                    <div class="col-6">
                                        <a href="/admin/articles/edit/<%= article.id %> " class="btn btn-outline-primary ">Editar</a >
                                    </div>
                                    <div class="col-6">
                                        <form action="/articles/delete" method="POST" onsubmit="apagar(event, this)">
                                            <input class="form-control" type="hidden" name="id" value="<%= article.id %>">
                                            <button class="btn btn-outline-warning" ">Apagar</button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% }) %> 

            </tbody>
        </table>
    </div>
  
</div>

<%- include ../../partials/footer.ejs %>
<script>
    function apagar(event, form) {
        event.preventDefault();
        var decision = confirm("Apagar este artigo?");
        if(decision){
            form.submit();
        }
    }
</script>